<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.ext</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name="is_teacher"/>
            </field>
            <xpath expr="//field[@name='vat']/.." positiob="inside">
                <field name="is_freelance"/>
            </xpath>
        </field>
    </record>

    <record id="teacher_tree_view" model="ir.ui.view">
        <field name="name">teacher.tree.view</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Teachers">
                <field name="display_name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="is_teacher"/>
                <field name="is_freelance"/>
            </tree>
        </field>
    </record>

    <record id="teacher_form_view" model="ir.ui.view">
        <field name="name">teacher.form.view</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="Teacher">
                <sheet>
                    <group>
                        <field name="display_name"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="is_teacher"/>
                        <field name="is_freelance"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="teachers_action" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="grades_manager.teacher_tree_view"/>
        <field name="view_ids" ref="grades_manager.teacher_form_view"/>
        <field name="view_ids"
               eval="[(5,0,0),
                      (0, 0, {'view_mode': 'tree', 'view_id': ref('teacher_tree_view')}),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('teacher_form_view')})]"/>

    </record>
</odoo>